<div class="modal" id="modal-delete" style="display:none;">
  <div class="modal-header">
    <h3>{{t "delete modal.title" context=context}}</h3>
  </div>
  <div class="modal-body">
    {{customMessage}}
    {{t "delete modal.warning" context=context content=content}}
  </div>
  <div class="modal-footer">
    <button type="button" class="btn" data-dismiss="modal">{{t "delete modal.cancel"}}</button>
    <button id="confirm-delete" class="btn btn-primary">{{t "delete modal.delete"}}</button>
  </div>
</div>
